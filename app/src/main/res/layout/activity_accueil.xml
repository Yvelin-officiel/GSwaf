<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:paddingTop="20dp"
            android:text="G Swaf"
            android:textSize="32dp"
            android:textStyle="bold"

            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1in">


        <!--  FENETRE PRINCIPALE (IMAGE)  -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

        </RelativeLayout>


        <!--  BOUTTONS GAUCHE  -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/material_dynamic_neutral40"
            android:padding="2dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <!--  BOUTTONS DROITE  -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/material_dynamic_neutral40"
            android:padding="2dp">

            <ImageButton
                android:id="@+id/addToLike"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/like"
                android:text="like"


                />

            <Button
                android:id="@+id/addToLater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addToLike"
                android:text="later" />

            <Button
                android:id="@+id/addToList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addToLater"
                android:text="list" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>